{
  "name": "@macrostrat/api-v2",
  "version": "2.2.0",
  "description": "An API for stratigraphic and geological information (Version 2).",
  "main": "server.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/UW-Macrostrat/macrostrat-api.git"
  },
  "scripts": {
    "dev": "nodemon --watch v2 --exec ts-node --transpileOnly server.ts",
    "dev:test": "ts-node-dev app.ts",
    "start": "ts-node --transpileOnly server.ts",
    "docker": "docker build -t macrostrat-api . && docker run --rm -it -p 5000:5000 macrostrat-api",
    "serve": "ts-node --transpileOnly server.ts",
    "test": "mocha -r ts-node/register/transpile-only -r dotenv/config \"api-tests/v2Tests/**/*.ts\"",
    "defs": "ts-node --transpileOnly ./v2/utilities/validateDefs.ts",
    "build-defs": "ts-node --transpileOnly ./v2/utilities/getOutputFields.ts",
    "build-changes": "grip ./v2/CHANGELOG.md --export ./v2/changes.html",
    "format": "prettier --write ."
  },
  "keywords": [
    "macrostrat",
    "macrostratigraphy"
  ],
  "contributors": [
    {
      "name": "John J Czaplewski"
    },
    {
      "name": "Amy Fromandi"
    },
    {
      "name": "Shanan Peters"
    },
    {
      "name": "Daven Quinn"
    }
  ],
  "license": "CC0",
  "dependencies": {
    "@turf/buffer": "^4.6.1",
    "@turf/envelope": "^4.6.0",
    "@types/express": "^4.17.1",
    "@types/node": "^24.10.1",
    "async": "1.5.2",
    "body-parser": "^1.6.3",
    "brute-force-equal-area": "https://github.com/UW-Macrostrat/brute-force-equal-area.git",
    "csv-express": "^1.1.0",
    "dbgeo": "^1.0.1",
    "dotenv": "^17.2.3",
    "express": "4.x.x",
    "filesize-parser": "^1.3.0",
    "geojson-precision": "^0.4.0",
    "mapshaper": "^0.3.20",
    "memory-cache": "^0.2.0",
    "microtime": "^3.0.0",
    "multiline": "^1.0.2",
    "pg": "^8.15.6",
    "pg-native": "^3.4.5",
    "portscanner": "^1.0.0",
    "redis": "^2.4.2",
    "tilestrata": "^2.0.1",
    "topojson": "^1.6.19",
    "ts-node": "^10.9.2",
    "turf-area": "^1.1.1",
    "turf-buffer": "^1.0.4",
    "underscore": "^1.8.3",
    "wellknown": "^0.3.0",
    "yesql": "^7.0.0"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.1",
    "@types/supertest": "^2.0.12",
    "axios": "^1.7.9",
    "image-size": "^0.5.0",
    "mocha": "^9.0.0",
    "node-uuid": "^1.4.3",
    "nodemon": "^3.0.3",
    "prettier": "^3.5.3",
    "should": "^4.0.4",
    "supertest": "^6.1.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "validator": "^3.34.0"
  },
  "packageManager": "yarn@4.11.0",
  "prettier": {
    "proseWrap": "always"
  }
}
